    <style name="AppTheme.Dialog" parent="@*projekt.substratum:style/Theme.AppCompat.Dialog" >
        <item name="*projekt.substratum:colorPrimary">#ff212121</item>
        <item name="*projekt.substratum:colorPrimaryDark">#ff000000</item>
        <item name="*projekt.substratum:colorAccent">@*android:color/accent_device_default_dark</item>
    </style>

    <style name="ToolbarTheme" parent="@*projekt.substratum:style/Theme.AppCompat">
        <item name="*projekt.substratum:colorAccent">@*android:color/accent_device_default_dark</item>
    </style>

    <style name="AppTheme.Dialog" parent="@android:style/Theme.DeviceDefault.Dialog" />

    <style name="AppTheme.PopupOverlay" parent="@*projekt.substratum:style/ThemeOverlay.AppCompat.Dark" />

    <style name="RestoreDialog" parent="@android:style/Theme.DeviceDefault.Dialog.Alert" />

    <style name="ThemeOverlay.AppCompat.Light" parent="@*projekt.substratum:style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@*android:color/background_material_dark</item>
    </style>

    <style name="ShowcaseDialog" parent="@*projekt.substratum:style/Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="*projekt.substratum:windowActionBar">false</item>
        <item name="*projekt.substratum:windowNoTitle">true</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>
    </style>

    <style name="AppTheme.SpecialUI" parent="@*projekt.substratum:style/Theme.AppCompat.NoActionBar">
        <!-- Copy of AppTheme -->
        <item name="*projekt.substratum:colorPrimary">#ff212121</item>
        <item name="*projekt.substratum:colorPrimaryDark">#ff000000</item>
        <item name="*projekt.substratum:colorAccent">@*android:color/accent_device_default_dark</item>
        <item name="android:toolbarStyle">@*projekt.substratum:style/ToolbarTheme</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="*projekt.substratum:preferenceTheme">@*projekt.substratum:style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="PhotoCrop.ActivityTheme" parent="@*projekt.substratum:style/Theme.AppCompat">
        <item name="*projekt.substratum:colorPrimary">@android:color/transparent</item>
        <item name="*projekt.substratum:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@*projekt.substratum:color/cropper_bg_glass</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
