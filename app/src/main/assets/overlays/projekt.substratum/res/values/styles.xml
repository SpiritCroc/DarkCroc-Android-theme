    <style name="AppTheme" parent="@*projekt.substratum:style/Theme.AppCompat.NoActionBar">
        <item name="*projekt.substratum:colorPrimary">#ff212121</item>
        <item name="*projekt.substratum:colorPrimaryDark">#ff000000</item>
        <item name="*projekt.substratum:colorAccent">@*android:color/accent_device_default_dark</item>
        <item name="android:toolbarStyle">@*projekt.substratum:style/ToolbarTheme</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="*projekt.substratum:preferenceTheme">@*projekt.substratum:style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

