<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- The color of the material notification background -->
    <color name="notification_material_background_color">#ff000000</color>

    <!-- The color of the legacy notification background -->
    <color name="notification_legacy_background_color">#ff000000</color>

    <!-- The color of the material notification background when dimmed -->
    <color name="notification_material_background_dimmed_color">#ff000000</color>

    <!-- The color of the material notification background when dark -->
    <color name="notification_material_background_dark_color">#ff000000</color>

    <!-- The color of the material notification background when low priority -->
    <color name="notification_material_background_low_priority_color">#ff000000</color>

    <!-- The background color of the notification shade -->
    <color name="notification_shade_background_color">#ff000000</color>

    <!-- The color of the ripples on the untinted notifications -->
    <color name="notification_ripple_untinted_color">#28ffffff</color>

    <!-- The color of the ripples on the low priority notifications -->
    <color name="notification_ripple_color_low_priority">#30ffffff</color>

    <!-- The color of the ripples on the tinted notifications -->
    <color name="notification_ripple_tinted_color">#30ffffff</color>

    <!-- The color of the gear shown behind a notification -->
    <color name="notification_gear_color">#80ffffff</color>

    <!-- The "inside" of a notification, reached via longpress -->
    <color name="notification_guts_bg_color">#ff424242</color>
    <color name="notification_guts_title_color">#ffffffff</color>
    <color name="notification_guts_text_color">#b2ffffff</color>
    <color name="notification_guts_btn_color">#ffffffff</color>

    <style name="TextAppearance.NotificationInfo" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.NotificationInfo.Primary">
        <item name="android:textColor">@*android:color/primary_text_material_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextAppearance.NotificationInfo.Confirmation">
        <item name="android:textColor">@*android:color/primary_text_material_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextAppearance.NotificationInfo.Secondary">
        <item name="android:textColor">@*android:color/primary_text_material_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.54</item>
    </style>

